{
  "name": "@udhaar/db",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "check": "eslint src && tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "migrator": "dbmate --migrations-dir=src/migrations --schema-file=src/schema.sql",
    "migrate:new": "pnpm migrator new",
    "migrate:up": "pnpm migrator up",
    "migrate:down": "pnpm migrator down",
    "db:load": "pnpm migrator load"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./fastify": {
      "types": "./dist/fastify/index.d.ts",
      "default": "./dist/fastify/index.js"
    }
  },
  "keywords": [],
  "author": "hellskater",
  "license": "ISC",
  "dependencies": {
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@udhaar/typescript-config": "workspace:*",
    "concurrently": "^9.0.1",
    "dbmate": "^2.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3"
  }
}
